{
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.2.0",
        "ext-json": "^1.5",
        "psr/http-server-handler": "^1.0",
        "slim/slim": "^3.12",
        "symfony/dotenv": "^4.3",
        "zendframework/zend-diactoros": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Api\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Api\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always"
    }
}
